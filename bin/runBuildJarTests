#echo "---- BUILDING JARS ----"
#for i in "${FILESTOBUILDJAR[@]}"
#do
#   echo "Analyzing $i"
#   java -jar resolve.jar -createJar -verboseJar -nodebug $i
#done
#echo "---- DONE BUILDING JARS ----"